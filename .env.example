# Application Configuration
APP_NAME=plan-craft
ENV=local

# Database Configuration
# For SQLite, only DATABASE path is needed
DB_SOURCE_DATABASE=data/plancraft.db

# Database Connection Pool Settings
DB_CONN_MAX_IDLE_TIME=300s
DB_CONN_MAX_LIFE_TIME=300s
DB_MAX_IDLE_CONNS=5
DB_MAX_OPEN_CONNS=10

# Database Log Level (ERROR, WARN, INFO)
DB_LOG_LEVEL=WARN

# For PostgreSQL (if you want to switch later)
# DB_SOURCE_HOST=localhost
# DB_SOURCE_PORT=5432
# DB_SOURCE_DATABASE=plan_craft
# DB_SOURCE_USERNAME=db_user
# DB_SOURCE_PASSWORD=db_password
# DB_SOURCE_SSL_MODE=disable

# For MySQL (if you want to switch later)
# DB_SOURCE_HOST=localhost
# DB_SOURCE_PORT=3306
# DB_SOURCE_DATABASE=plan_craft
# DB_SOURCE_USERNAME=db_user
# DB_SOURCE_PASSWORD=db_password

